@model DataModel.Library.UserModel
@{
    ViewBag.Title = "PromoteToGraduate";
}

<h3>Promote To Graduate</h3>

<!Doctype html>
<html>
<head>
    <title></title>
    <style>
        body {
            background-image: url('../../Images/Interview_App_1.jpg');
            /* Adjust background properties as needed */
            background-size: cover;
            background-repeat: no-repeat;
        }

        .promote-box {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Adjust shadow as needed */
            padding: 20px;
            border-radius: 10px;
            background-color: #ffffff; /* White background */
            margin-top: 15%;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        // Function to hide the message after 5 seconds (adjust as needed)
        $(document).ready(function () {
            setTimeout(function () {
                $('#messageDiv').fadeOut('slow');
            }, 5000); // 3 seconds
        });
    </script>
</head>
<body>
    <div class="container mt-4">
        <div class="row justify-content-md-center">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="promote-box">
                    <h3 style="text-align:center">Promote To Graduate</h3>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.HiddenFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <h5>
                                If you want to get promoted to graduate role please provide
                                LinkedIn profile URL and administrator will promote you in a day
                            </h5>
                        </div>
                        <div class="form-group">
                            @*@if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div id="messageDiv" class="alert alert-danger">@ViewBag.Message</div>
        }*@

                            @if (!string.IsNullOrEmpty(ViewBag.NotApprovalComment))
                            {
                            <div id="messageDiv" class="alert alert-danger">@ViewBag.NotApprovalComment.  Please enter correct LinkedIn ID and try after some time. </div>
                            }
                        </div>

                        if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                        {
                            <div class="form-group" style="margin-top:5px;">
                                @Html.LabelFor(model => model.LinkedInUrl, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.LinkedInUrl, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", rows = "3" } })

                                @Html.ValidationMessageFor(model => model.LinkedInUrl, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" disabled>Promote to Graduate</button>
                                <a href="@Url.Action("Index","Login")" class="btn btn-secondary">Back</a>
                            </div>
                        }
                        else
                        {
                            <div class="form-group" style="margin-top:5px;">
                                @Html.LabelFor(model => model.LinkedInUrl, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.LinkedInUrl, new { htmlAttributes = new { @class = "form-control", rows = "3" } })
                                @Html.ValidationMessageFor(model => model.LinkedInUrl, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Promote to Graduate</button>
                                <a href="@Url.Action("Index","Login")" class="btn btn-secondary">Back</a>
                            </div>
                        }


                    }
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
